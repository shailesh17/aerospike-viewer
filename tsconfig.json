{
  "compilerOptions": {
    "target": "es6",
    "module": "nodenext", // allow ESM for frontend, and let node use .cjs where needed
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "server/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
